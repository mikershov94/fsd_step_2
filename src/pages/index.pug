extends layouts/base
include ../components/form-elements/textfield/textfield
include ../components/form-elements/dropdown/dropdown
include ../components/form-elements/date-dropdown/date-dropdown
include ../components/form-elements/textfield-masked/textfield-masked
include ../components/form-elements/filter-date-dropdown/filter-date-dropdown
include ../components/form-elements/textfield-subscription/textfield-subscription
include ../components/form-elements/filter-dropdown/filter-dropdown 

block content
    include ../components/uikit-header/uikit-header
    .wrapper-form-kit
        .col-formkit-start
            .form-input-field
                .inscription default
                +textfield('Email')
            .form-input-field
                .inscription hover / focus
                +textfield('', 'This is a pretty awesome', true)
            .form-input-field
                .inscription default
                +dropdown('Сколько гостей')
            .form-input-field
                .inscription default
                +textfield-masked()
            .dropdown-wrapper
                .form-input-field
                    +date-dropdown('ДД.ММ.ГГ')
                .form-input-field
                    +date-dropdown('19.08.2019')
            .form-input-field
                +filter-date-dropdown()
            .form-input-field
                +textfield-subscription()  

    .wrapper-form-kit
        .col-formkit-start
            .form-input-field
                .inscription default
                +filter-dropdown()
            .form-input-field
                .inscription expanded
                +filter-dropdown(true)