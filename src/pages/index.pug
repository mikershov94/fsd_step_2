extends layouts/base
include ../components/form-elements/textfield/textfield
include ../components/form-elements/dropdown/dropdown
include ../components/form-elements/date-dropdown/date-dropdown
include ../components/form-elements/textfield-masked/textfield-masked
include ../components/form-elements/filter-date-dropdown/filter-date-dropdown
include ../components/form-elements/textfield-subscription/textfield-subscription

block content
    //a(href="./color-and-types.html") Colors&Types
    include ../components/uikit-header/uikit-header
    .wrapper-form-kit
        .col-formkit-start
            .form-input-field
                +textfield('Email')
            .form-input-field
                +textfield('', 'This is a pretty awesome', true)
            .form-input-field
                +dropdown()
            .form-input-field
                +textfield-masked()
            .dropdown-wrapper
                .form-input-field
                    +date-dropdown('ДД.ММ.ГГ')
                .form-input-field
                    +date-dropdown('19.08.2019')
            .form-input-field
                +filter-date-dropdown()
            .form-input-field
                +textfield-subscription()  

    .wrapper-form-kit
        .col-formkit-start
            .form-input-field
                label Dropdown
                .dropdown.dropdown_default
                    .dropdown_default__value-line
                        .dropdown_default__content 2 спальни, 2 кровати...
                        .dropdown_default__arrow keyboard_arrow_down
                    .dropdown_default__list
            .form-input-field
                label Dropdown
                .dropdown.dropdown_expanded
                    .dropdown_expanded__value-line
                        .dropdown_expanded__content 2 спальни, 2 кровати...
                        .dropdown_expanded__arrow keyboard_arrow_down
                    .dropdown_expanded__list