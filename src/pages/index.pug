extends layouts/base
include ../components/form-elements/textfield/textfield
include ../components/form-elements/dropdown/dropdown
include ../components/form-elements/date-dropdown/date-dropdown
include ../components/form-elements/textfield-masked/textfield-masked
include ../components/form-elements/filter-date-dropdown/filter-date-dropdown
include ../components/form-elements/textfield-subscription/textfield-subscription
include ../components/form-elements/filter-dropdown/filter-dropdown

include ../components/form-elements/checkbox/checkbox

mixin rate-button(rating)
    - var count = 0
    div(class="rate-button" data-rating=rating)
        while count < 5
            if count < rating
                i.material-icons.rate-button__icon star
            else
                i.material-icons.rate-button__icon star_border
            -count++

block content
    include ../components/uikit-header/uikit-header
    .wrapper-form-kit
        .col-formkit-start
            .form-input-field
                .inscription default
                +textfield('Email')
            .form-input-field
                .inscription hover / focus
                +textfield('', 'This is a pretty awesome', true)
            .form-input-field
                .inscription default
                +dropdown('Сколько гостей')
            .form-input-field
                .inscription default
                +textfield-masked()
            .dropdown-wrapper
                .form-input-field
                    +date-dropdown('ДД.ММ.ГГ')
                .form-input-field
                    +date-dropdown('19.08.2019')
            .form-input-field
                +filter-date-dropdown()
            .form-input-field
                +textfield-subscription() 
        .col-formkit-middle
            .form-input-field
                label Checkbox buttons
                .demo-buttons-wrapper
                    +checkbox-button('checkbox-1', 'Можно курить')
                    +checkbox-button('checkbox-2', 'Можно с питомцами', true)
                    +checkbox-button('checkbox-3', 'Можно пригласить гостей (до 10 человек)', true)
            .form-input-field
                label Radio buttons
                ul
                    li
                        input(type="radio" name="sex" id="radioMen" checked)
                        label(for="radioMen") Мужчина
                            
                    li
                        input(type="radio" name="sex" id="radioWomen")
                        label(for="radioWomen") Женщина
            .form-input-field
                h3 Toggle
                ul
                    li
                        label(for="subscribe")
                            input(type="checkbox" id="subscribe" checked)
                            span.toggle__switch
                                span.toggle__slider
                            span.toggle__label Получать спецпредложения
                    li
                        label(for="notSubscribe")
                            input(type="checkbox" id="notSubscribe")
                            span.toggle__switch
                                span.toggle__slider
                            span.toggle__label Получать спецпредложения
            .form-input-field
                h3 Like button
                ul
                    li
                        div(class="like-button" data-state="" data-count="2")
                            
                            i(class="material-icons like-button__icon") favorite_border
                            span.like-button__count 2
                    li
                        div(class="like-button" data-state="liked" data-count="2")
                            i(class="material-icons like-button__icon") favorite_border
                            span.like-button__count 2
            .form-input-field
                h3 Rate button
                .wrapper-rating
                    - var rating1 = 4
                    - var rating2 = 5
                    +rate-button(rating1)
                    +rate-button(rating2)

    .wrapper-form-kit
        .col-formkit-start
            .form-input-field
                .inscription default
                +filter-dropdown()
            .form-input-field
                .inscription expanded
                +filter-dropdown(true)