    -
        var numFeatures = [
            {icon: 'insert_emoticon', label: 'Комфорт', description: 'Шумопоглощающие стены'},
            {icon: 'location_city', label: 'Удобство', description: 'Окно в каждой из спален'},
            {icon: 'whatshot', label: 'Уют', description: 'Номер оснащен камином'},
        ] 

    section.room-details
        .room-details__view
            .room-details__img_main
                img(src=testRoom.slides[0])
            .room-details__img_small
                .room-details__img_2
                    img(src=testRoom.slides[1])
                .room-details__img_3
                    img(src=testRoom.slides[2])
        .room-details__info
            .room-details__description
                .room-details__wrapper
                    .room-details__features
                        h1 Сведения о номере
                        +features(testRoom.features)
                    .room-details__rates
                        h1 Впечатления от номера
                        +chart(testRoom.rates) 

                .room-details__comments
                    .room-details__comments_count
                        .room-details__count= testRoom.comments.length
                        .room-details__label отзыва
                    h1 Отзывы посетителей номера
                    each comment in testRoom.comments
                        +comment(comment)

                .room-details__wrapper_cancel
                    .room-details__rules
                        h1 Правила
                        +bullet-list()
                    .room-details__cancel
                        h1 Отмена
                        .room-details__cancel_text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
            .room-details__order
                +order-room()
        