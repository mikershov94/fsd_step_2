                {icon: 'whatshot', label: 'Уют', description: 'Номер оснащен камином'},
            ],
            rates: {
                count: 260,
                gold: 50,
                green: 25,
                purple: 25
            },
            numb: '888',
            lux: true,
            price: '9 990',
            collecting_1: 0,
            collecting_2: 300,
            comments: [
                {
                    foto: "/img/murad.jpg",
                    date: new Date(2020, 3, 22),
                    likes: 12,
                    liked: true,
