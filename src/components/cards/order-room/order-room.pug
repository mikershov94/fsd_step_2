include ../../form-elements/date-dropdown/date-dropdown
include ../../form-elements/guest-dropdown/guest-dropdown
include ../../form-elements/buttons/submit/button-submit

mixin order-room()
    .order-room
        .order-room__label
            .order-room__left
                span.order-room__symbol № 
                span.order-room__number 888
                span.order-room__type люкс
            .order-room__right
                span.order-room__price 9 990₽
                span.order-room__period в сутки
        .order-room__range
            +date-dropdown('Прибытие', '_from')
            +date-dropdown('Выезд', '_to')
        .order-room__guests
            +guest-dropdown('Гости')
        .order-room__wrapper
            .order-room__count 9 990₽ х 4 суток
            .order-room__room-cost 39 960₽
        .order-room__wrapper
            .order-room__fee-1_label Сбор за услуги: скидка 2 179₽
                span.order-room__fee-1_info i
            .order-room__fee-1_cost 0₽
        .order-room__wrapper
            .order-room__fee-2_label Сбор за дополнительные услуги
                span.order-room__fee-2_info i
            .order-room__fee-2_cost 300₽
        .order-room__cost
            .order-room__cost_label Итого
            .order-room__cost_separator
            .order-room__cost_cost 38 081₽
        .order-room__submit
            +btn-submit('Забронировать')